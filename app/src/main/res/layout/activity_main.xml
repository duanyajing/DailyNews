<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapp.dailynews.activity.MainActivity">

    <include layout="@layout/layout_commcontent_main" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/nav_headerlayout"
        app:menu="@menu/nav_menu"></android.support.design.widget.NavigationView>

    <!--android:layout_gravity="left":小菜单从左边显示出来，需要用手打-->

    <!--抽屉布局允许有自布局
    根据先后顺序把第一个自布局当作主布局或者主页面显示，如果还有另外一个小布局，会当作侧滑菜单-->
</android.support.v4.widget.DrawerLayout>
